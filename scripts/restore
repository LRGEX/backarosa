#!/bin/bash

#==========================================================
#======================= MEGA SECTION =====================
#==========================================================
if [ -n "${MEGA_EMAIL}" ] && [ -n "${MEGA_PASSWORD}" ]; then
duplicati-cli restore "mega://${MEGA_DIR}" --auth-username="${MEGA_EMAIL}" --auth-password="${MEGA_PASSWORD}" --no-encryption="true" --restore-permissions="true"
fi
#==========================================================
#================== END OF MEGA SECTION ===================
#==========================================================

#==========================================================
# ====================== LOCAL SECTION ====================
#==========================================================
if [ "${LOCAL_BACKUP}" == "true" ]; then
duplicati-cli restore "file://${BACKAROSA_BACKUP}" --no-encryption="true" --restore-permissions="true"
fi
#==========================================================
# ================== END OF LOCAL SECTION =================
#==========================================================
